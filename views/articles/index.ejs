<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="style.css">
  <title>SIDO Admin</title>
</head>
<body>
  <section id="home">
    <header>
      <a href="www.sidoexe.web.app"><img class="logo" src="assets/SIDO2.png" alt=""></a>
      <a href="/articles/new" class="btn-article">New Article</a>
    </header>
    <div class="cards">
      <% articles.forEach(article => { %>
        <div class="card">
          <div class="card-body">
            <div class="bg" style="background-image: url(<%= article.image %>);" ></div>
            <h1><a href="<%= article.link %>" target="_BLANK"><%= article.title %></a></h1>
            <div class="card-text mb-2"><%= article.description %></div>
            <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
</body>
</html>